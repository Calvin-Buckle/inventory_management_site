extends layout

block content
  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='oem') OEM: 
      input(type="text", name="oem", placeholder='OEM')
      label(for='partNumber') Partnumber: 
      input(type='text', name='partNumber', placeholder='Partnumber')
      label(for='quantity') Quantity: 
      input(type='number', name='quantity')
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li= error.msg
