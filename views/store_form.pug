extends layout 
block content 

    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='name') Store: 
            input#name.form-control(type='text', placeholder='Store name'
name='name' required value=(undefined===store ? '' : store.name) )
        button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors
                li!= error.msg